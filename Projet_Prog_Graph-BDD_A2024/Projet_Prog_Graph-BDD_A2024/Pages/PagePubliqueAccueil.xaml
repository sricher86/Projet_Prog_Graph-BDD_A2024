<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Projet_Prog_Graph_BDD_A2024.Pages.PagePubliqueAccueil"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Projet_Prog_Graph_BDD_A2024.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local1="using:Projet_Prog_Graph_BDD_A2024"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <GridView Grid.Row="3" SelectionMode="Single" x:Name="activites" HorizontalAlignment="Center" Background="White" Width="800">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="local1:Activite">
                    <Grid Margin="10 5 20 15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <Image Grid.Row="0" Width="100px" Height="100px" Source="{x:Bind local1:Categorie, }"/>
                        <TextBlock Grid.Row="1" Text=""
                                Margin="12,6,0,0"/>
                        <Button Grid.Row="4" x:Name="boutonSupprimer" Click="boutonSupprimer_Click" Margin="20">
                            <SymbolIcon Symbol="Delete" />
                        </Button>
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</Page>
